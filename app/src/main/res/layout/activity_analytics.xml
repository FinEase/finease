                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textColor="#00b8e6"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00.00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#00b8e6"
                            android:id="@+id/analyticsFoodAmount"
